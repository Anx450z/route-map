{
  "name": "rails-routes-codelens",
  "displayName": "Rails Routes CodeLens",
  "version": "1.1.0",
  "description": "Shows Rails routes above their controller actions",
  "repository": "https://github.com/Anx450z/route-map",
  "publisher": "anx450z",
  "icon": "icons/icon.png",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ruby"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ruby",
        "extensions": [
          ".rb",
          ".ruby"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Rails Route Codelens",
      "properties": {
        "RailsRouteCodelens.showRoute": {
            "type": "boolean",
            "default": true,
            "description": "Show route information for controller actions"
        },
        "RailsRouteCodelens.showTables": {
            "type": "boolean",
            "default": true,
            "description": "Show table names for model"
        },
        "RailsRouteCodelens.showModels": {
            "type": "boolean",
            "default": true,
            "description": "Show models name for tables in schema"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/pluralize": "^0.0.30",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "pluralize": "^8.0.0"
  }
}
